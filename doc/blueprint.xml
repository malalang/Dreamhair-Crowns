@import 'tailwindcss';

@layer base {

  /* Custom form element style */
  select {
    width: 100%;
    padding-left: 0.75rem;
    padding-right: 0.75rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    border: 1px solid #333333; /* Darker border for dark theme */
    border-radius: 0.375rem;
    background-color: #000000;
    color: white;
    outline: none;
  }

  /* Typography Hierarchy & Custom Colors */
  :root {
    /* Dreamhair Gold Palette 
       Replaces the previous Amber food-themed colors 
    */
    --theme-gold: #D4AF37;       /* Metallic Gold - Primary Accent */
    --theme-gold-light: #F4CF57; /* Light Gold - Hover states/Highlights */
    --theme-gold-dark: #AA8C2C;  /* Dark Gold - Borders/Shadows */
    
    --theme-black: #050505;      /* Deep Rich Black */
    --theme-gray: #1a1a1a;       /* Off-black for cards/sections */
  }

  h1 {
    @apply text-5xl md:text-6xl lg:text-7xl font-bold tracking-widest leading-tight;
    font-variant-caps: small-caps;
    color: white;
  }

  h2 {
    @apply text-3xl md:text-4xl lg:text-5xl font-bold tracking-widest leading-tight mb-8 relative inline-block;
    font-variant-caps: small-caps;
    color: white;
  }

  /* h2 Underline/Separator - Adjusted to Gold */
  h2::after {
    content: '';
    @apply block w-1/3 h-1 bg-[var(--theme-gold)] mt-4 mx-auto rounded-full opacity-80;
  }

  h3 {
    @apply text-2xl md:text-3xl font-semibold tracking-tight text-white;
  }

  h4 {
    @apply text-xl md:text-2xl font-semibold tracking-tight text-white;
  }

  h5 {
    @apply text-lg md:text-xl font-medium tracking-tight text-white;
  }

  h6 {
    @apply text-base md:text-lg font-medium tracking-wide uppercase text-white;
  }

  p {
    @apply text-base md:text-lg font-normal leading-relaxed text-white/80;
    text-wrap: pretty;
  }

  img {
    object-fit: contain;
  }

  label {
    color: var(--theme-gold); /* Gold labels for luxury feel */
    line-height: 1.625;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  /* Media Queries for Typography */
  @media (min-width: 768px) {
    label {
      font-size: 1rem;
    }
    p {
      font-size: 1.125rem;
    }
    li {
      font-size: 1.125rem;
    }
  }

  li {
    color: white;
    line-height: 1.625;
    font-size: 1rem;
  }

  /* Global Body Styles */
  body {
    @apply m-0 p-0 text-white h-full relative antialiased;
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
      'Helvetica Neue', Arial, 'Noto Sans', sans-serif;
    
    /* Minimalist Background 
       Removed the specific 'BackGround.png' to ensure a clean slate.
       Using a deep black with a very subtle radial gradient for depth.
    */
    background-color: var(--theme-black);
    background-image: radial-gradient(circle at 50% 0%, #1a1a1a 0%, #000000 70%);
    background-attachment: fixed;
    color: white;
  }

  /* Card/Section Styling Updates */
  article {
    @apply bg-neutral-900/50 border border-white/10 rounded-md py-6 px-8 my-3 mt-6 mb-6 shadow-sm shadow-black backdrop-blur-sm;
    transition: border-color 0.3s ease;
  }

  article:hover {
    border-color: var(--theme-gold-dark);
  }

  nav {
    @apply m-0 p-0 md:p-6;
  }
  
  /* Utility for Gold Text Highlight */
  .text-gold {
    color: var(--theme-gold);
  }
  
  .bg-gold {
    background-color: var(--theme-gold);
  }
  
  .border-gold {
    border-color: var(--theme-gold);
  }
}

